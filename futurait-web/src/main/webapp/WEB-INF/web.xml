<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <display-name>jsf</display-name>
    
    <listener>
        <listener-class>com.futurait.controladorAcceso.SesionManagement</listener-class>
    </listener>
    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>server</param-value>
    </context-param>
	
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
	
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>none</param-value>
    </context-param>
	
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    
	
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
	
    <welcome-file-list>
        <welcome-file>acceso.xhtml</welcome-file>
    </welcome-file-list>
        
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.fut</url-pattern>
    </servlet-mapping>
	
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    
    
    
    <error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/paginas/protegidas/acceso/usuario/inicio.fut</location>
    </error-page>
    
        <error-page>
        <error-code>500</error-code>
        <location>/paginas/protegidas/acceso/usuario/inicio.fut</location>
    </error-page>

    
    <error-page>
        <error-code>404</error-code>
        <location>/paginas/protegidas/acceso/usuario/inicio.fut</location>
    </error-page>
    
    <error-page>
        <error-code>405</error-code>
        <location>/paginas/protegidas/acceso/usuario/inicio.fut</location>
    </error-page>
    
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>futura-seguridad</web-resource-name>
            <url-pattern>/paginas/protegidas/*</url-pattern>
            <http-method>POST</http-method>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    

    
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/paginas/acceso.fut</form-login-page>
            <form-error-page>/paginas/acceso-error.html</form-error-page>
        </form-login-config>
    </login-config>
    
    <security-role>
        <role-name>*</role-name>
    </security-role>
    <servlet-mapping>
        <servlet-name>springFlowApplication</servlet-name>
        <url-pattern>/app/*</url-pattern>
    </servlet-mapping>
        
    <session-config>
        <session-timeout>
            120
        </session-timeout>
    </session-config>
</web-app>

