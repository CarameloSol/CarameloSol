<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="futuraItDatasource" transaction-type="JTA">
  <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>java:jboss/futuraItDataSource</jta-data-source>
        <class>com.acceso.modelo.AccUsuario</class>
        <class>com.acceso.modelo.AccRol</class>
        <class>com.acceso.modelo.AccMenu</class>
        <class>com.acceso.modelo.AccRolMenu</class>
        <class>com.inventario.modelo.InvArticulo</class>
        <class>com.inventario.modelo.InvCategoria</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
   <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
  </persistence-unit>
</persistence>
